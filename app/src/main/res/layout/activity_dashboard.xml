<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.Dashboard"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"

        >


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_sport"
            android:text="اضف الي تمارين رياضيه"
            android:background="@drawable/btn_edit"
            android:textColor="#fff"
            android:layout_margin="15dp"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_health"
            android:text="اضف الي صحه الجسم"
            android:background="@drawable/btn_edit"
            android:textColor="#fff"
            android:layout_margin="15dp"

            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_book"
            android:text="اضف الي كتابي"
            android:background="@drawable/btn_edit"
            android:textColor="#fff"
            android:layout_margin="15dp"

            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_online_prog"
            android:text="اضف الي برامج المتابعه اونلاين"
            android:background="@drawable/btn_edit"
            android:textColor="#fff"
            android:layout_margin="15dp"

            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_gen_article"
            android:text="اضف الي مقالات عامه"
            android:background="@drawable/btn_edit"
            android:textColor="#fff"
            android:layout_margin="15dp"

            />





    </LinearLayout>

</ScrollView>