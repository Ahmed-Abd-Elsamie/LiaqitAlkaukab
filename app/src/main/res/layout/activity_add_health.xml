<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ActivityAddHealth">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"

        >


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_rcecipe"
            android:text="اضافه وصفات"
            android:background="@drawable/btn_edit"
            android:textColor="#fff"
            android:layout_margin="15dp"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_articles"
            android:text="اضافه مقالات"
            android:background="@drawable/btn_edit"
            android:textColor="#fff"
            android:layout_margin="15dp"

            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_supp"
            android:text="اضافه مكملات"
            android:background="@drawable/btn_edit"
            android:textColor="#fff"
            android:layout_margin="15dp"

            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add_caloriy"
            android:text="اضافه سعرات"
            android:background="@drawable/btn_edit"
            android:textColor="#fff"
            android:layout_margin="15dp"

            />





    </LinearLayout>


</ScrollView>