<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:fontFamily="@font/cairoblack"
        android:textColor="#fff"
        android:layout_gravity="right"
        android:gravity="right"
        android:id="@+id/txt_desc"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:alpha="0.3"
        android:src="@drawable/ic_alarm_white"
        android:scaleType="fitCenter"
        android:id="@+id/img_food"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:gravity="fill">

        <Button
            android:id="@+id/eat_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="تناولها الان"
            tools:text="تناولها الان"
            android:fontFamily="@font/cairoblack"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored" />

        <Button
            android:id="@+id/not_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="مليش نفس"
            tools:text="مليش نفس"
            android:fontFamily="@font/cairoblack"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored" />

        <Button
            android:id="@+id/delay_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="نأجلها شويه"
            tools:text="نأجلها شويه"
            android:fontFamily="@font/cairoblack"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored" />


    </LinearLayout>

</LinearLayout>