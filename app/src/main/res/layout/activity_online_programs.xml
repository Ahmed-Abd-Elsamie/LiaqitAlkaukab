<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.online_programs.OnlinePrograms"

    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:id="@+id/home_frag_x"


        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"


            >


            <LinearLayout
                android:id="@+id/action_bar_articles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp"


                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/btn_profile_health"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_person_black_24dp"
                    app:civ_border_color="#fff"
                    app:civ_border_width="2dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="لياقه الكوكب"                        android:textColor="#fff"
                        android:textSize="20dp"
                        android:fontFamily="@font/cairoblack"

                        />


                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_message_black_24dp"

                    />


            </LinearLayout>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/recycler_programs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_below="@+id/action_bar_articles"

                >



            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>