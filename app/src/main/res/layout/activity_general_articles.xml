<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.general_articles.GeneralArticles"


    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:id="@+id/home_frag_x"


    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"


        >


        <LinearLayout
            android:id="@+id/action_bar_articles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"


            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btn_profile_health"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_person_black_24dp"
                app:civ_border_color="#fff"
                app:civ_border_width="2dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"

                >


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/cairoblack"
                android:text="  فهرسه المقالات"
                android:textColor="#fff"
                android:textSize="20dp"
                android:id="@+id/btn_content"
                android:background="@null"
                android:drawableRight="@drawable/ic_assignment_black_24dp"
                android:layout_gravity="center"
                android:gravity="center"

                />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView

            android:id="@+id/recycler_articles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_below="@+id/action_bar_articles"

            >



        </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:id="@+id/tabs_articles"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/action_bar_articles"
            android:background="@drawable/menu_back"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="5dp"
            android:visibility="gone"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/btn_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:fontFamily="@font/cairoblack"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="مقالات عامه"
                    android:textColor="#fff"
                    android:textSize="18dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/btn_tab2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairoblack"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="وصفات طعام"
                    android:textSize="18dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/btn_tab3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairoblack"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="بطولات الرياضه"
                    android:textSize="18dp"


                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/btn_tab4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairoblack"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="عضلات الجسم"
                    android:textSize="18dp"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/btn_tab5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairoblack"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="مكملات غذائيه"
                    android:textSize="18dp"


                    />

            </LinearLayout>


        </LinearLayout>




    </RelativeLayout>

</RelativeLayout>

</FrameLayout>